doctype html
html
    head
        title="Warning - Highly Explosive"

        meta( charset="UTF-8" )

        meta( name="keywords"
            content="chat,webchat,irc,technology,programming,social,cute,kawaii,desu,senpai" )

        meta( name="description"
            content="Get ready for the future of social metacommunication. \
                    Social metacommunication? What's that even mean?" )

        meta( name="author" 
            content="Landon Powell" )

        link( rel="stylesheet"      href="css/lightChat.css"         )
        link( rel="stylesheet"      href="css/fonts.css"             )
        link( rel="shortcut icon"   href="css/images/iconPurple.png" )

        link( rel="stylesheet"      href="css/views/landingPage.css" )

    body
        h1="Top Boards"

        a( href="/="+rooms[0].name )
            .room.toproom
                .name=rooms[0].name+": "+rooms[0].topic
                .posts="Posts: "+rooms[0].posts
                .users="Users: "+rooms[0].users

        each room, index in rooms.splice(1)
            a( href="/="+room.name )
                .room
                    .name=room.name+": "+room.topic
                    .posts="Posts: "+room.posts
                    .users="Users: "+room.users